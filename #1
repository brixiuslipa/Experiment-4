#include <iostream>
#include <string>

using namespace std;

int main ()
{
	int q, a, z, s;
	char w;
	
	do
	{
		cout << "\n\nMENU: " << endl;	
 		cout << "	1.Addition"<< endl;
 		cout << "	2.Subtraction"<< endl;
 		cout << "	3.Multiplication"<< endl;
 		cout << "	4.Division"<< endl;
 		cout << "	5.Modulus"<< endl;
  		cin >> q;
    
		cout << "\nEnter your two numbers: " << endl;
    	cin >> a;
    	cin >> z;
   	 
   		if (q == 1)
	    {
	    	cout << "Result: " << a + z << endl;
		}
		else if (q == 2)
		{
	    	cout << "Result: " << a - z << endl;
		}
		else if (q == 3)
		{
			cout << "Result: " << a * z << endl;
		}
		else if (q == 4)
		{
			cout << "Result: " << a / z << endl;
		}
		else if (q == 5)
		{
			cout << "Result: " << a % z << endl;
		}
		else
			cout << "Please try again\n";
			
		cout << "Continue? [y]es / [n]o] ";
		
		cin >> w;
		if(w!= 'y')
		{
			return 0;
		}
		else
			s = 1;
		
	}while(s == 1);
	return 0;
}
